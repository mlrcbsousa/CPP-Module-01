CFLAGS	= -Wall -Wextra -Werror -std=c++98
CC			= clang++
RM			= rm -f
OBJ			= ${SRC:.cpp=.o}
SRC			= main.cpp
INC			= main.hpp

NAME		= replace

${NAME}:	${OBJ}
					${CC} ${CFLAGS} ${OBJ} -o $@

%.o:%.cpp ${INC}
					${CC} ${CFLAGS} -c $< -o $@

all:			${NAME}

test:			${NAME}
					${RM} empty_file.replace file.replace
					-./${NAME} no_file s1 s2
					-./${NAME} empty_file s1 s2
					-./${NAME} file ut poney

clean:
					${RM} ${OBJ}

fclean:		clean
					${RM} ${NAME}

re: 			fclean all

.PHONY : 	all clean fclean re
